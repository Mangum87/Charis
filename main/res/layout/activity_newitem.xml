<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <EditText
        android:id="@+id/edit_barcode"
        android:layout_width="282dp"
        android:layout_height="61dp"
        android:layout_marginStart="371dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="371dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Enter Barcode to Edit Item" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="69dp"
        android:layout_height="21dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="20dp"
        android:text="Barcode:"
        app:layout_constraintEnd_toStartOf="@+id/edit_barcode"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Select_Date"
        android:layout_width="109dp"
        android:layout_height="36dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="24dp"
        android:hint="Select Date"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_description" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="76dp"
        android:layout_height="22dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:text="Description"
        app:layout_constraintEnd_toStartOf="@+id/edit_description"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="55dp"
        android:text="Save"
        android:onClick="save_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="289dp"
        android:layout_height="49dp"
        android:layout_marginStart="404dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="405dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_barcode"
        tools:text="Enter Description" />

    <Button
        android:id="@+id/X_button"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:onClick="return_prev"
        android:text="X"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/find_button"
        android:layout_width="68dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:onClick="find_item"
        android:text="Find"
        app:layout_constraintStart_toEndOf="@+id/edit_barcode"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="34dp"
        android:layout_height="24dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="90dp"
        android:text="Price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="62dp"
        android:text="Quantity"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toEndOf="@+id/edit_price"
        app:layout_constraintTop_toBottomOf="@+id/edit_description" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="63dp"
        android:layout_height="23dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="20dp"
        android:text="Condition"
        app:layout_constraintEnd_toStartOf="@+id/spinner1"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="173dp"
        android:layout_height="44dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="289dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_quantity" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="164dp"
        android:layout_height="43dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="59dp"
        android:layout_height="21dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="20dp"
        android:text="Category"
        app:layout_constraintEnd_toStartOf="@+id/spinner2"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="Source"
        app:layout_constraintEnd_toStartOf="@+id/edit_source"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/edit_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="309dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />

    <RadioGroup
        android:layout_width="118dp"
        android:layout_height="67dp"
        android:layout_marginStart="215dp"
        android:layout_marginBottom="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/save_button"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radio_sellable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Sellable"
            tools:layout_editor_absoluteX="331dp"
            tools:layout_editor_absoluteY="695dp" />

        <RadioButton
            android:id="@+id/radio_nonsellable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="NonSellable"
            android:checked="true"
            tools:layout_editor_absoluteX="331dp"
            tools:layout_editor_absoluteY="727dp" />
    </RadioGroup>

    <Button
        android:id="@+id/new_button"
        android:layout_width="62dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:text="New"
        android:onClick="create_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:onClick="clear_form"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_price"
        android:layout_width="88dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toStartOf="@+id/textView12"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/edit_quantity"
        android:layout_width="128dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="300dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/Select_Date" />

</androidx.constraintlayout.widget.ConstraintLayout>